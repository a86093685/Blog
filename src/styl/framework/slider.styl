/*slider start*/
.blog-slider_wrap
  display: flex
  flex-direction: column
  align-items: center
  max-width:  240px
  padding: 20px
  text-align: center
  background-color line-modifier-color
  box-shadow 0 0 2px bg-modifier-color

.blog-avatar
  overflow hidden
  width: 100px
  height: 100px
  border-radius: 50%

.blog-info
  padding-top 3 * padding-space

.blog-avatar_nickname
  font-size 24px
  padding-bottom: padding-space
  margin: 0

.blog-info_state
  display: flex
  justify-content center
  padding padding-space padding-space * 2

.blog-state_item
  padding: 0 padding-space * 1.5
  span
    display: block

.blog-state_count
  color font-theme-color
  font-weight 700


.blog-state_name
  color font-modifier-color

.blog-info_content 
  padding-top padding-space 
  text-align left
  text-indent 2em
  font-size font-size-p
  color font-theme-color
/*slider end*/