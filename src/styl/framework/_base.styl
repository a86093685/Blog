/*base start*/
html 
  font-family Georgia, 'Times New Roman', Times, serif, "Microsoft yahei"
  color #222

body 
  background-color bg-theme-color

a 
  color #666

a:hover 
  color #222
  text-decoration none

a:focus
  text-decoration: none

a.blog-btn
    padding padding-space
    &:hover
      background-color font-title-color
      color #fff
    &.blog-btn_reverse
      background-color font-title-color
      color #fff
      &:hover
        background-color line-reverse-color
        color #fff

img 
  width 100%
  height auto

ul,
h1 
  margin 0
  padding 0

ul 
  list-style none

::placeholder 
  color #ccc

.text-hidden 
  display block
  overflow hidden
  width 0
  height 0
  font-size 0

.blog-line 
  position relative
  &::after
    position absolute
    margin auto
    content ''
    background-color line-theme-color
.blog-line_col
   &::after
    right 0
    top 0
    bottom 0
    width 1px
    height 80% 
    transform scaleX(.5) 
.blog-line_row
  &::after
    left 0
    right 0
    bottom 0
    width 100% 
    height 1px
    transform  scaleY(.5)  
  
.glyphicon 
  top 2px !important

[hidden]
  display: none !important

.w-e-text-container 
  height 450px !important

.alert 
  margin-bottom 0

.panel-body 
  padding 0
.panel-title
  font-size font-size-h * 2
  font-weight 700

.panel-info
  color font-modifier-color;
  border 0
  &>.panel-heading
    color font-theme-color;
    background-color bg-theme-color
    border 1px solid bg-theme-color

input[readonly]
  border none
  outline none
  background-color bg-theme-color
  &:hover,
  &:focus
    border none
    outline none
    box-shadow 0 0 0 #000
/*base end*/