.blog-user_info
  padding 20px
  background-color #fff
  & input[type=file]
    display: none
.blog-upload
  display flex
  align-items: center

.blog-upload_avatar
  width: 100px
  height 100px
  border-radius: 50%
  cursor pointer
  overflow hidden
  & img
    display block
    width 100%
    max-width: 100%;
.blog-upload_wrap
  display: flex
  align-items: center
  & .blog-btn
    background-color bg-theme-color 
    margin-left padding-space * 2
    border-radius: radius-theme-size 

.blog-upload_preview
  margin-left 20px
  overflow hidden
  width: 200px
  height: 200px

  